@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <http://kairos.ai/ont/core#> .
@prefix schema: <https://schema.org/> .

#################################################################
#    SKOS Concept Scheme for Kairos-to-Schema.org Mappings
#################################################################

:KairosSchemaOrgMappings a skos:ConceptScheme ;
    rdfs:label "Kairos to Schema.org Mappings" ;
    skos:definition "SKOS mappings aligning Kairos Core Ontology with Schema.org vocabulary" ;
    skos:hasTopConcept :CustomerConcept, :OrderConcept, :ProductConcept, :SupplierConcept .

#################################################################
#    Customer Mappings
#################################################################

:CustomerConcept a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Customer"@en ;
    skos:altLabel "Client"@en, "Buyer"@en, "Patron"@en, "Consumer"@en ;
    skos:definition "An individual or organization that purchases products or services from a business."@en ;
    skos:exactMatch schema:Customer ;
    skos:closeMatch schema:Person, schema:Organization ;
    skos:note "Maps to Schema.org Customer for e-commerce contexts; Person/Organization for general business contexts."@en ;
    skos:example "Individual purchasing a product online (Person), Company procuring office supplies (Organization)."@en .

#################################################################
#    Order Mappings
#################################################################

:OrderConcept a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Order"@en ;
    skos:altLabel "Purchase Order"@en, "Sales Order"@en, "Transaction"@en ;
    skos:definition "A commercial transaction between a customer and supplier for goods or services."@en ;
    skos:exactMatch schema:Order ;
    skos:related schema:Invoice, schema:Receipt ;
    skos:note "Schema.org Order includes e-commerce and general commerce scenarios."@en ;
    skos:example "Online shopping cart checkout, B2B purchase requisition."@en .

#################################################################
#    Product Mappings
#################################################################

:ProductConcept a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Product"@en ;
    skos:altLabel "Item"@en, "Goods"@en, "Merchandise"@en, "Article"@en ;
    skos:definition "A tangible or intangible good offered for sale or exchange."@en ;
    skos:exactMatch schema:Product ;
    skos:narrower schema:IndividualProduct ;
    skos:related schema:Service, schema:Offer ;
    skos:note "Covers both physical products and digital goods; does not include services (use schema:Service)."@en ;
    skos:example "Laptop computer, software license, book."@en .

#################################################################
#    Supplier Mappings
#################################################################

:SupplierConcept a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Supplier"@en ;
    skos:altLabel "Vendor"@en, "Provider"@en, "Seller"@en, "Merchant"@en ;
    skos:definition "An organization or individual that provides products or services to customers."@en ;
    skos:exactMatch schema:Organization ;
    skos:closeMatch schema:LocalBusiness, schema:Corporation ;
    skos:related schema:seller ;
    skos:note "Schema.org lacks a specific 'Supplier' class; use Organization with role='supplier' in implementation."@en ;
    skos:example "Manufacturing company, wholesale distributor, service provider."@en .

#################################################################
#    Property Mappings
#################################################################

:customerIdMapping a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Customer Identifier"@en ;
    skos:definition "Unique identifier assigned to a customer in business systems."@en ;
    skos:exactMatch schema:identifier ;
    skos:note "Use schema:identifier with PropertyValue to specify identifier type."@en .

:emailMapping a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Email Address"@en ;
    skos:exactMatch schema:email ;
    skos:note "Schema.org email property applies to Person, Organization, and ContactPoint."@en .

:nameMapping a skos:Concept ;
    skos:inScheme :KairosSchemaOrgMappings ;
    skos:prefLabel "Name"@en ;
    skos:exactMatch schema:name ;
    skos:related schema:givenName, schema:familyName, schema:legalName ;
    skos:note "Use schema:name for general names; schema:legalName for registered organization names."@en .

#################################################################
#    Hierarchical Relationships
#################################################################

# Demonstrate broader/narrower relationships
:ProductConcept skos:broader schema:Thing ;
                skos:narrower :PhysicalProductConcept, :DigitalProductConcept .

:PhysicalProductConcept a skos:Concept ;
    skos:prefLabel "Physical Product"@en ;
    skos:definition "A tangible product with physical properties."@en ;
    skos:broader :ProductConcept ;
    skos:exactMatch schema:Product ;
    skos:note "Subset of products requiring shipping/logistics."@en .

:DigitalProductConcept a skos:Concept ;
    skos:prefLabel "Digital Product"@en ;
    skos:definition "An intangible digital good delivered electronically."@en ;
    skos:broader :ProductConcept ;
    skos:exactMatch schema:Product ;
    skos:related schema:SoftwareApplication ;
    skos:note "Includes software, e-books, digital media."@en .
